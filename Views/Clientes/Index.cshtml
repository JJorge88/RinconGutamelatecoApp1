@model IEnumerable<RinconGuatemaltecoApp.Models.Cliente>

<h1>Clientes</h1>

<a href="/Clientes/Create">Crear Nuevo Cliente</a>

<table>
    <tr>
        <th>Nombre</th>
        <th>Dirección</th>
        <th>Teléfono</th>
        <th>Acciones</th>
    </tr>
    @foreach (var cliente in Model)
    {
        <tr>
            <td>@cliente.Nombre</td>
            <td>@cliente.Direccion</td>
            <td>@cliente.Telefono</td>
            <td>
                <a href="/Clientes/Edit/@cliente.ClienteID">Editar</a>
                <a href="/Clientes/Delete/@cliente.ClienteID">Eliminar</a>
            </td>
        </tr>
    }
</table>
